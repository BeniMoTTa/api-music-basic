// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             Int        @id @default(autoincrement())
  name           String     @db.VarChar(127)
  email          String     @unique @db.VarChar(127)
  password       String     @db.VarChar(60)
  reset_password String?    @db.VarChar(127)
  cpf            String     @unique @db.VarChar(11)
  phone          String     @db.VarChar(11)
  birthdate      String     @db.VarChar(8)
  description    String     @db.Text()
  cep            String     @db.VarChar(12)
  state          String     @db.VarChar(127)
  city           String     @db.VarChar(127)
  street         String     @db.VarChar(127)
  number         String     @db.VarChar(127)
  complement     String     @db.VarChar(127)
  user_typeMusic String     @db.VarChar(20)
  comments       Comments[]
  music          Music[]

  @@map("users")
}

model Comments {
  id          Int      @id @default(autoincrement())
  description String   @db.Text()
  created_at  DateTime @default(now())
  edited      Boolean? @default(false) @db.Boolean()
  music_id    Int?
  user        Users?   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id     Int?
  Music       Music?   @relation(fields: [musicId], references: [id])
  musicId     Int?

  @@map("comments")
}

model Music {
  id       Int        @id @default(autoincrement())
  title    String
  audioUrl String
  user     Users?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id  Int
  comments Comments[]

  @@map("music")
}

enum typeMusics {
  Punk
  Deathcore
  HeavyMetal
  Indie
  Grunge
  Progress
  Country
  PopRock
  FolkRock
  HardRock
  NewWave
}
